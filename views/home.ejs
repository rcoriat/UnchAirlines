                            <div class="card-body">
                                <h5 class="card-title">París</h5>
                                <p class="card-text">  </p>
                                <a href="#" class="btn btn-primary">Ver destino</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        
        <% include partials/scripts.ejs %>
        <% include partials/footer.ejs %>
    </body>
</html>